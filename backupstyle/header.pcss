.header{
  grid-area: header;
  background: $violet;
}
.header__inner{
  display: grid;
  grid-template-columns: 50px 220px 200px 1fr;
  grid-template-rows: 1fr;
  flex-wrap: wrap;
  height: 100%;
  width: 100%;
  align-items: center;
  @include middle{
    grid-template-columns: 50px 220px 1fr;
  }
  @include phones{
    grid-template-columns: 50px 1fr;
    grid-template-rows: 1fr 1fr;
  }
}