script(type="text/x-template")#skills-list
  .skills
    .skills__inner(v-for="category in categories" :key="category.id")
      skills-row(
        :category="category"
        :skills="skills"
      )


script(type="text/x-template")#skills-row
    .skills__row
      h3.skills__title {{category.category}}
      .skills__box(
        v-for="skill in skills"
        :key="skill.id"
        v-if="skill.category === category.id"
        )
        skill(
          :skillName="skill.title",
          :skillPercent="skill.percent"
        )

script(type="text/x-template")#skill
  .skills__item
    svg(viewBox="0 0 150 150")
      circle(
        r="63"
        cx="50%"
        cy="50%"
        fill="none"
        class="svg-circle svg-circle_first"
      )
      circle(
        r="63"
        cx="50%"
        cy="50%"
        class="svg-circle svg-circle_second"
        ref="circle-color"
        stroke="url(#gradient)"
      )
      linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0")
        stop(offset="0%" stop-color="#ffa414")
        stop(offset="100%" stop-color="#df7700")
    .skills__name {{skillName}}