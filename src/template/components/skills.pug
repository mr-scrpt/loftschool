script(type="text/x-template")#skills-list
  .skills
    .skills__inner(v-for="skill in skills" :key="skill.skillsGroup")
      skills-row(
        :skill="skill"
      )


script(type="text/x-template")#skills-row
    .skills__row
      .skills__title {{skill.skillsGroup}}
      .skills__box(v-for="(skillPercent, skillName) in skill.skills")
        skill(
        :skillName="skillName",
        :skillPercent="skillPercent"
        )

script(type="text/x-template")#skill
  .skills__item
    svg(viewBox="0 0 144 144")
      circle(
      r="65"
      cx="50%"
      cy="50%"
      fill="none"
      class="svg-circle svg-circle_first"
      )
      circle(
      r="65"
      cx="50%"
      cy="50%"
      class="svg-circle svg-circle_second"
      ref="circle-color"
      stroke="url(#gradient)"
      )
      linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0")
        stop(offset="0%" stop-color="#ffa414")
        stop(offset="100%" stop-color="#df7700")
    .skills__name {{skillName}}
