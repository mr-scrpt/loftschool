//Бордер
@mixin bdr($side, $color, $size, $border-radius) {
  @if side{
    border: $size solid $color;
    @if border-radius{
      border-radius: $border-radius;
    }
  }
  @else{
    border-$side: $size solid $color;
    @if border-radius{
      border-radius: $border-radius;
    }
  }
}

@mixin desktopHd() {
  @media screen and (max-width: $bp-desktop-hd) {
    @content ;
  }
}

@mixin desktop() {
  @media screen and (max-width: $bp-desktop) {
    @content ;
  }
}

@mixin laptop() {
  @media screen and (max-width: $bp-laptop) {
    @content ;
  }
}
@mixin middle() {
  @media screen and (max-width: $bp-middle) {
  @content ;
  }
}

@mixin tablets() {
  @media screen and (max-width: $bp-tablets) {
    @content ;
  }
}

@mixin phones() {
  @media screen and (max-width: $bp-phones) {
    @content ;
  }
}
// Для прозрачности текста
@mixin to($color,$value){
    color: rgba($color, $value);
}



//Анимация
@mixin ts($obj, $obj2:"empty", $obj3:"empty") {
  @if $obj3 != "empty" {
    transition: $obj $th, $obj2 $th, $obj3 $th;
  }
  @if $obj2 != "empty" {
    transition: $obj $th, $obj2 $th;
  }
  @else {
    transition: $obj $th;
  }

}


// Фон

@mixin bgc($color){
  background: $color;
}


