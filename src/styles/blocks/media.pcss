.media{
  background: url("/src/images/content/bg__autumn.jpg") no-repeat 0 0;
  position: relative;
  &:before{
    position: absolute;
    content: "";
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 100%;
    height:100%;
    background: linear-gradient(-90deg, transparent 0, rgba($dark, 0.9) 50%);
    background-size: cover;
  }
  &__inner{
    //max-height: 1375px;
    width: $container;
    margin: auto;
    height: 1375px;

  }
}
