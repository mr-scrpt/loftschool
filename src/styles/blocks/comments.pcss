.comments{
  &__inner{
    display: flex;
  }
  &__item{
    width: 50%;
    margin-left: calc(8.3333% + 15px);
    position: relative;
    &:before{
      position: absolute;
      content: "";
      width: 80px;
      height: 70px;
      left: -95px;
      background: svg-load('icon__quote.svg', fill=rgba(#fff, .05), width=100%, height=100%) no-repeat;
    }
  }
}