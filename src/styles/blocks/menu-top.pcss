.menu-top{
  &__inner{
    text-align: center;
    z-index: 3;
    position: relative;
    @include laptop {
      text-align: left;
      background: #fff;
      position: fixed;
      z-index: 4;
      right: 0;
      top: 0;
      width: 320px;
      padding-left: 50px;
      box-sizing: border-box;
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      display: none;
      &-show{
        display: block;
      }
    }
  }

  &__list{
    background-color: pink;
  }
  &__link{
    display: inline-block;
    text-decoration: none;
    color: $top-menu__link-color;
    padding: 65px 30px;
    border-bottom: 3px solid transparent;
    @include ts(color, border-color);
    &:hover{
      color: $orange;
      border-color: $orange;
    }
    @include desktop {
      padding: 50px 20px;
    }
    @include laptop {
      padding: 20px 10px;
      display: block;
      color: $text-color;
      font-weight: $font_bold;
      font-size: 18px;
      border: none;
      &:hover{
        border: none;
      }
    }
  }
  &__bottom{
    display: none;
    @include laptop {
      display: block;
      background-color: blue;
      padding-top: 40px;
      display: flex;
    }

  }

}