header.header.page__header
  .parallax
    +image('parallax/bg__back-plan.png', 'parallax__img parallax__back-plan img')
    //+image('parallax/bg__back-plan.png', 'parallax__img parallax__img_middle-plan img')
    .parallax__img_middle-plan
    +image('parallax/bg__front-plan.png', 'parallax__img parallax__front-plan img')
  .header__topbar
    .header__logo
      +image('logo.png', 'logo')
    nav.header__menu.menu-top
      -let menu = ['Главная', 'Обо мне','Навыки','Работы','Отзывы','Связаться']
      each item in menu
        a(href=`#${item}`, class="menu-top__link")=item
    .header__soc.soc-top
      .soc-top__inner
        -let soc = {gh: "github.com", vk: "vk.com",insta: "instagram.com"}
        each val, index in soc
          a(href=`${val}`, class="soc-top__link")
            +icon(`icon__${index}`, `icon icon_${index} soc-top__icon`)
